<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.fsm.entrysystemkeyless.ui.view.custom.AlarmIndicatorView
        android:id="@+id/indicator"
        android:layout_width="@dimen/size_100"
        android:layout_height="@dimen/size_50"
        android:layout_above="@id/verification"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/verification"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_16sp"
        android:gravity="center"
        android:layout_above="@id/control_wrapper"
        android:layout_height="wrap_content" />

    <GridLayout
        android:id="@+id/control_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/controls_wrapper"
        android:columnCount="2"
        android:padding="@dimen/padding_25"
        android:rowCount="2">

        <Button
            android:id="@+id/lock"
            android:layout_width="@dimen/size_80"
            android:layout_height="@dimen/size_80"
            android:background="@drawable/btn_wrapper"
            android:text="@string/lock_tag"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/unlock"
            android:layout_width="@dimen/size_80"
            android:layout_height="@dimen/size_80"
            android:background="@drawable/btn_wrapper"
            android:text="@string/unlock_tag"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/lock2x"
            android:layout_width="@dimen/size_80"
            android:layout_height="@dimen/size_80"
            android:background="@drawable/btn_wrapper"
            android:text="@string/lock2x_tag"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/unlock2x"
            android:layout_width="@dimen/size_80"
            android:layout_height="@dimen/size_80"
            android:background="@drawable/btn_wrapper"
            android:text="@string/unlock2x_tag"
            android:textColor="@color/colorWhite" />
    </GridLayout>


</RelativeLayout>
